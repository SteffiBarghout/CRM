                                <div class="row">

                                    <div class="col-2">
                                        <label for="inputProfileImg">Profile Image</label> <img src={{img}} width="250"
                                            height="250" class="img-fluid" id="updatePhoto">
                                    </div>
                                    <div class="col-10" id="uploadImg" style="display: none;">
                                        {{msg}}



                                        <form action="/upload" method="POST" enctype="multipart/form-data">
                                            <div class="form-group">


                                                <input type="file" name="myImage">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>





                                <div class="line"></div>



                                <br>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputPassword4">Password</label>
                                        <input type="password" class="form-control" id="inputPassword4"
                                            placeholder="Password">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputJobTitle">Job Titile</label>
                                        <input type="text" class="form-control" id="inputJobTitle"
                                            placeholder="Job Title">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary" id="saveProfile"
                                    style="display: none;">Save
                                    Info</button>
                                <button type="submit" class="btn btn-warning" id="cancelProfile"
                                    style="display: none;">Cancel</button>
                            </fieldset>

                        </form>
                    </div>
                </div>
            </div>

