<div class="modal fade bd-example-modal-lg1" id="exampleModal1" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content create-modal">
            <div class="modal-header text-dark">
                <h5 class="modal-title" id="exampleModalLabel">Add Customer</h5>
                <button type="button" class="close close_NewCus" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <hr>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label text-dark">First Name:</label>
                        <input type="text" class="form-control" id="CusFirstName" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label text-dark">Last Name:</label>
                        <input type="text" class="form-control" id="CusLastName" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-title" class="col-form-label text-dark">Address:</label>
                        <input type="text" class="form-control" id="CusAddress" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-title" class="col-form-label text-dark">City:</label>
                        <input type="text" class="form-control" id="CusCity" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-title" class="col-form-label text-dark">State:</label>
                        <input type="text" class="form-control" id="CusState" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-title" class="col-form-label text-dark">Zip Code:</label>
                        <input type="text" class="form-control" id="CusZip" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-title" class="col-form-label text-dark">Phone:</label>
                        <input type="text" class="form-control" id="CusPhone" required>
                    </div>
                    <div class="form-group">
                        <label for="recipient-title" class="col-form-label text-dark">Email:</label>
                        <input type="email" class="form-control" id="CusEmail" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-warning close_NewCus" data-dismiss="modal">Close</button>
                <button type="button" id="NewCus_btn" class="btn btn-outline-dark">Submit</button>
                <br>
                <p id="newCusMsg" style="color:red"></p>
            </div>
        </div>
    </div>
</div>