<script>
    const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"
    ];

    const dayNames = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

    var d = new Date();
    var day = d.getDay();
    var date = d.getDate();
    var month = d.getMonth();
    var year = d.getFullYear();

    // write to DOM
    document.querySelectorAll("th").forEach((el, i) => el.textContent = dayNames[i].substring(0, 3));
    today = `${dayNames[day]}, ${monthNames[month]} ${date}, ${year}`;
    month1 = `${monthNames[month]}  ${year}`;

    document.querySelector('h2').textContent = today;
    document.querySelector('#month').textContent = month1;

    // get all table data elements
    document.querySelectorAll("td").forEach((el, i) => {
        el.textContent = d.getDate(d.setDate(i + 1))
    });

    // style 'today'
    const gridNum = date - 1;
    document.querySelectorAll("td")[gridNum].classList.add("today");



</script>

